#ifndef _RR_RR_RANDOM_H_
#define _RR_RR_RANDOM_H_


// bugs in gcc 44 c++ random generator
#if (__cplusplus >= 201103L) || defined(_MSC_VER)
    #include <random>
    #define cxx11_ns std
    #define RR_CXX_RANDOM 1
#elif (defined(__GNUC__) && __GNUC__ >= 4 && __GNUC_MINOR__ >= 6) \
    ||  __clang_major__ >= 4 || defined(__APPLE__)
    #include <tr1/random>
    #define cxx11_ns std::tr1
    #define RR_CXX_RANDOM 1
#else
    #include <stdlib.h>
    #include <sys/time.h>
#endif

#endif /* _RR_RR_RANDOM_H_ */